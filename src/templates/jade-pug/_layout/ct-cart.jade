.container
	.row.flex.flex-wrap
		.col-12
			section.cartstep.clearfix
				.step.active
					.number 1
					.name Giỏ hàng
				.step
					.number 2
					.name Đăng nhập
				.step
					.number 3
					.name Thông tin
				.step
					.number 4
					.name Thanh toán
		.col-12
			section.cart-page.clearfix
				h1.carttitle Giỏ hàng của bạn (<strong>2</strong> sản phẩm)
				//- .cartnotice Giỏ hàng có chứa sản phẩm được tham gia chương trình khuyến mãi. 
					a(target="_blank" href="#") Xem chi tiết
					.removenotice
				table.carttable
					thead
						tr 
							th Sản phẩm
							th Đơn giá
							th Số lượng
							th Thành tiền
					tbody
						tr 
							td.product 
								a.productimg(href="#")
									img(src="img/product/1.jpg", alt="")
								.productdetail
									.product-brand Samsonite
									h3.productname
										a(href="#") UPLITE SPL
									.product-size 71cm Spinner
									a.removeproduct(href="#") Bỏ sản phẩm
							td.price
								.new 500.000đ
								//- .old 600.000đ
								.sale Giảm 10%
							td.amount
								.input-number
									.btn-spin.btn-dec -
									input(type="text", value="1")
									.btn-spin.btn-inc +
							td.total 500.000đ
						tr 
							td.product 
								a.productimg(href="#")
									img(src="img/product/2.jpg", alt="")
